@model IEnumerable<Booking>
@{
    ViewData["Title"]="Index";

}
@if(TempData["success"]!=null){
    <h2>@TempData["success"]</h2>
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Booking List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Booking" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new Booking</a>
        </div>
    </div>

<br><br>
<table class="table table-bordered table-stripped" style="width: 100%;">
    <thead>
        
            <tr>
                
                <th>
                    RoomId
                </th>
                <th>
                    CustomerId
                </th>
                <th>
                    CustomerName
                </th>
            </tr>
        

    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                
                <td width="30%">
                    @obj.RoomId
                </td>
                 <td width="30%">
                    @obj.CustomerId
                </td>
                 <td width="30%">
                    @obj.CustomerName
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Booking"asp-action="Edit" asp-route-id="@obj.BookingId"class="btn btn-primary mx-2">Edit
                            <i class="bi bi-pencil-square"></i>

                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Booking"asp-action="Delete" asp-route-id="@obj.BookingId"class="btn btn-danger mx-2">Delete
                            <i class="bi bi-trash"></i>
                            

                        
                    
                

                        </a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
</div>