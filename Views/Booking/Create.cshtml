@model Booking

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Booking</h2>
            <hr/>
        </div>
        
        <div class="mb-3">
            <label asp-for="RoomId"></label>
            <input asp-for="RoomId" class="form-control">
            <span asp-validation-for="RoomId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CustomerId"></label>
            <input asp-for="CustomerId" class="form-control">
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CustomerName"></label>
            <input asp-for="CustomerName" class="form-control">
             <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px;">Create</button>
        <a asp-controller="Booking" asp-action="Index" class="btn btn-secondary" style="width: 150px;">Back to list</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }

}