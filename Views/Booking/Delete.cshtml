@model Booking

<form method="post" asp-action="Delete">
    <input asp-for="BookingId" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Booking</h2>
            <hr/>
        </div>
        
        <div class="mb-3">
            <label asp-for="RoomId"></label>
            <input asp-for="RoomId" disabled class="form-control">
             
        </div>
        <div class="mb-3">
            <label asp-for="CustomerId"></label>
            <input asp-for="CustomerId"disabled class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="CustomerName"></label>
            <input asp-for="CustomerName" disabled class="form-control">
        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px;">Delete</button>
        <a asp-controller="Booking" asp-action="Index" class="btn btn-secondary" style="width: 150px;">Back to list</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }

}